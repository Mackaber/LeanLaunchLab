.alert-message.error a, .alert-message.info a {
  color: white;
}

.form .clearfix, .form-stacked .clearfix {
  margin-bottom: 5px;
}

.form-stacked fieldset {
  padding-top: 0;
}

li {
  color: inherit;
}

.form-stacked .actions, .actions
{
  background: transparent;
  border: none;
  margin: 0;
  padding: 0;
}

.form-stacked {
  padding: 0;
  margin: 0;
}

.error > label,
.error .help-block,
.error .help-inline,
.field_with_errors input[type='text'],
.field_with_errors input[type='password'],
.formError
{
  color: #B94A48 !important;
  border-color: #B94A48 !important;
}

.field_with_errors
{
  display: inline;
}

.formError
{
  margin-top: -11px;
  margin-bottom: 16px;
}


.error input, .error textarea
{
  color: #B94A48 !important;
  border-color: #EE5F5B !important;
}
