body#help
{
  div#wrapper {
    width:995px;
    margin:0 auto;
  }
  div#wrapper h1 {
    margin:20px 0 15px 0;
    color:#000;
    font:normal 30px Arial, Helvetica, sans-serif;
    text-transform:none;
    float:left;
  }
  p.link {
    float:left;
    font:normal 14px Arial, Helvetica, sans-serif;
    color:#000;
    padding:35px 0 0 10px;
  }
  p.link a {
    color:#000;
  }
  /*Member Link*/
  ul.toplink {
    padding:0;
    margin:-12px 18px 0 0;
    text-align:left;
    float:right;
  }
  ul.toplink li {
    text-align:left;
    display:inline-block;
    padding:0 1px 0 0;
    line-height:13px;
    margin:0;
  }
  ul.toplink li:last-child {
    border:none;
  }
  ul.toplink li a {
    color:#6F6F6F;
    font-size:12px;
    text-decoration:none;
    border:1px solid #e5e5e5;
    border-bottom-color:#ebebeb;
    display:block;
    padding:0 15px;
    line-height:28px;
      background:url(<%= asset_path 'v2/sub-nav.jpg' %>) 0 0 repeat-x;
  }
  ul.toplink li a:hover {
    color:#626060;
    text-decoration:none;
    background:#ebebeb;
    border:1px solid #dbd9d9;
    border-bottom-color:#ebebeb;
  }
  ul.toplink li a.selected {
    color:#626060;
    text-decoration:none;
    background:#ebebeb;
    border:1px solid #dbd9d9;
    border-bottom-color:#ebebeb;
  }
  /*Grey wrapper*/
  .body-wrapper {
    height:100%;
    padding:0;
    position:relative;
  }
  /*Top links*/
  .box-wrapper{
    overflow:hidden;
    padding:12px;
    margin-bottom:20px;
    background-color:#ebebeb;
  }
  .box-wrapper h3{
    font:bold 20px "Trebuchet MS", Arial;
    color:#707070;
    text-transform:uppercase;
    text-shadow:1px 1px 1px #fff;
    margin-bottom:16px;
  }
  .info-bar {
    height:34px;
    background:url(<%= asset_path 'v2/info-bg.jpg' %>) 0 0 repeat-x;
    border:1px solid #777777;
    padding:0 0 0 35px;
    position:relative;
    font:bold 14px/34px Arial, Helvetica, sans-serif;
    color:#fff;
    text-transform:uppercase;
  }
  .info-bar img {
    position:absolute;
    left:10px;
    top:8px;
  }
  .video {
    width:275px;
    height:161px;
    float:left;
    background-color:#333333;
    margin:10px 40px 30px 17px;
    position:relative;
  }
  .last {
    margin-right:0;
  }
  .bottom {
    margin-bottom:0;
  }
  .video p {
    position:absolute; bottom:15px; left:0;
    font:normal 14px/35px Arial, Helvetica, sans-serif;
    color:#fff;
    background-color:#999999;
    width:100%;
    padding:0; margin:0;
    text-indent:10px;
  }
  .video a.play {
    background:url(<%= asset_path 'v2/help-play-icon.png' %>) 0 0 no-repeat;
    width:39px;
    height:40px;
    display:block;
    position:absolute; top:35px; left:100px;
    font-size:0; text-indent:-10000px;
  }
  .video a.play:hover {
    background-position:0 -41px;
  }
  ul.faqs {
    float:left;
    width:335px;
    margin:0 0 15px;
    list-style:none;
    padding:0;
  }
  ul.last {
    width:280px;
  }
  ul.faqs li {
    line-height:18px;
    color:#121212;
    font:normal 12px/18px Arial, Helvetica, sans-serif;
  }
  ul.faqs li h4 {
    font-weight:bold; font-size:14px;
    padding:0; margin:0; line-height:20px;
  }
  ul.faqs li a {
    color:#121212;
    background:url(<%= asset_path 'v2/help-faq-bullet.gif' %>) 0 50% no-repeat;
    text-decoration:none;
    padding-left:10px;
  }
  ul.faqs li a:hover {
    text-decoration:underline;
  }
  .answer-box {
    padding:15px;
    background-color:#fff;
    font:normal 12px/17px Arial, Helvetica, sans-serif;
    color:#121212;
  }
  .answer-box strong {
    display:block;
  }
  .answer-box p {
    margin-bottom:10px;
  }
  .answer-box h4 {
    font-weight:bold; font-size:14px; color:#121212;
    padding:0; margin:0 0 5px; line-height:20px;
    border-bottom:1px solid #EBEBEB;
  }
  p.top {
    padding:10px 0; margin:0;
    text-align:right;
  }
}