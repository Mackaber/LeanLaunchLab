body#landing
{
  background:url(<%= asset_path 'v2/sponsor-body-bg.jpg' %>) 0 0 repeat;
  
  .landing-banner h1
  {
    font-size: 42px;   
  }
  
  .topbar-inner
  {
    background: none;
  }
  
  p.sponsor
  {
    margin: 23px 0;
  }
  
  .icons
  {
    li.twitter
    {
      width: 156px;
    }
  }
  
  .signup-faq .signup-area label
  {
    text-align: left;
  }
  
  .signup-faq .signup-section
  {
    padding: 16px 0;
  }
  
  .legal-advice p
  {
    line-height: 16px;
    font-size: 12px;
    
    strong
    {
      line-height: 16px;
    }
  }
  
  .signup-faq .signup-area input[type="radio"]
  {
    margin-left: 3px;
    margin-right: 3px;
  }
  
  form.sign-up-form
  {
    label
    {
      text-align: left;
    }
  }
  
  a.pricing {
    right: 75px;
  }
  
  #footer
  {
/*    position: absolute;
    left: 0;
    bottom: 0;
*/    
    ul.icons
    {
      margin-top: 5px;
      
      li
      {
        line-height: 12px;
        float: right;
      }
    }
    p
    {
      line-height: 12px;
      float: left;
    }
    
    a
    {
      color: inherit;
    }
    
    small
    {
      color: inherit;
      font-size: 9px;
    }
  }
  
  .financial
  {
    label
    {
      text-align: left;
    }
    
    input
    {
      padding: 1px;
    }
  }
}