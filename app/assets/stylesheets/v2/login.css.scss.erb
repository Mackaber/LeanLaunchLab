body#login
{
  background:#ffffff;

  div#wrapper{
  	/*top:45px;left:0px;right:0px;bottom:0px;
  	background:url(<%= asset_path 'v2/repeat.jpg' %>) 0 0 repeat-x;*/
  	background-color:#fff;
  	height:100%;

  }
  div#wrapper h1 {
  	margin:14px 0 0 23px;
  }
  /*Grey wrapper*/
  .body-wrapper {
  	background-color:#ebebeb;
  	border:1px solid #dbd9d9;
  	width:518px;
  	padding:15px;
  	margin:63px auto;

  	position:relative;
  }
  /*Login header*/
  .login-header {
  	background:url(<%= asset_path 'v2/twotone-header.jpg' %>) 0 0 repeat-x;
  	height:34px;
  	border:1px solid #656565;
  	position:relative;
  	padding:0 0 0 30px;
  	font:bold 14px/34px Arial, Helvetica, sans-serif;
  	color:#fff;
  	text-transform:uppercase;
  }
  .login-header img {
  	position:absolute;
  	top:9px;
  	left:12px;
  }
  .login-body {
  	background-color:#fff;
  	padding:30px 31px;
  	height:100%;
  	overflow:hidden;
  }
  .login-body input {
  	width:429px;
  	height:16px;
  	padding:13px;
  	border:1px solid #ebebeb;
  	font:normal 18px Arial, Helvetica, sans-serif;
  	color:#999999;
  	margin-bottom:16px;
  	-webkit-border-radius: 0;
    -moz-border-radius: 0;
    border-radius: 0;
      -webkit-box-shadow:none;
    -moz-box-shadow: none;
    box-shadow: none;
  }
  .login-body a.forget {
  	float:left;
  	font:bold 12px Arial, Helvetica, sans-serif;
  	color:#333333;
  	text-decoration:none;
  }
  .login-body a.forget:hover {
  	text-decoration:underline;
  }
  .login {
  	background-color:#C5C3C3;
  	border:1px solid #8E8E8E;
  	line-height:27px;
  	padding:0 18px;
  	font-size:12px;
  	text-shadow:1px 1px 1px #fff;
  	margin-right:12px;
  	float:right;
  }
  .login:hover {
  	color:#000;
  }
  /*Forget Text*/
  .forget_text {
  	font:normal 14px/20px Arial, Helvetica, sans-serif;
  	color:#333333;
  	min-height:120px;
  }
  .forget_text2 {
  	font:normal 14px/20px Arial, Helvetica, sans-serif;
  	color:#333333;
  	min-height:30px;
  }

  .or-login-link
  {
  float:left;
  margin-top:10px;
  margin-left:375px;
  }
  .or-login-link a
  {
  color:#333333;
  font:bold 14px/20px Arial, Helvetica, sans-serif;
  }
  /*Footer Styling*/
  #footer2 {
  	background:url(<%= asset_path 'v2/footer-bg.jpg' %>) 0 0 repeat-x;
  	height:84px;
  	width:100%;
  	position:absolute; left:0; bottom:0; z-index:1000;
  }
  .footer-logo {
  	margin:26px 0 0 15px;
  	float:left;
  }
  #footer2 ul {
  	float:right;
  	padding:24px 10px 0 0;
  	margin:0;
  }
  #footer2 ul li {
  	float:left;
  	padding:0 10px;
  	background:url(<%= asset_path 'v2/footer-divider.gif' %>) 100% 50% no-repeat;
  	list-style:none;
  }
  #footer2 ul li.last {
  	background:none;
  }
  #footer2 ul li a {
  	font:normal 12px/18px "Lucida Sans", Arial, serif;
  	color:#5f737c;
  	text-shadow:0px 1px 1px #f7f9fb;
  	text-decoration:none;
  }
  #footer2 ul li a:hover {
  	color:#394950;
  }
  #footer2 p {
  	font:normal 10px/18px "Lucida Sans", Arial, serif;
  	color:#5f737c;
  	padding:48px 16px 0 0;
  	text-align:right;
  }
  /*Footer Styling ends*/
}