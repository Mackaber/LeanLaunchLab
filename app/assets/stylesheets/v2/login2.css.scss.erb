body#login
{
  .login-body
  {
    input
    {
      color: inherit;
      font-weight: bold;
    }
    
  }
  
  #main .btn
  {
    float: right;
  }
  
  form.sign-up-form
  {
    fieldset
    {
      border-top: 1px dotted #bfbfbf;
      padding-top: 10px;
      margin-top: 10px;
      margin-bottom: 10px;
      
      h2
      {
        font-size: 18px;
        font-weight: normal;
      }
      
      input[type='radio']
      {
        width: auto;
        height: auto;
        padding: 0;
        margin: 3px 0 3px -20px;
        line-height: normal;
        border: none;
        float: left;
        border-radius: 3px;
        font-size: 13px;
      }
      
      ul.inputs-list
      {
        margin-bottom: 20px;
      }
      
      .help-block
      {
        margin-top: -11px;
      }
    }
    
    button.login
    {
      float: none;
      margin-top: 10px;
    }
  }
  
}