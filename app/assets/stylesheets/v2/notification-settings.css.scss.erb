body#notification-settings
{
  div#wrapper h1 {
  	margin:14px 0 0 23px;
  }
  /*Member Link*/
  ul.toplink {
  	padding:0;
  	margin:-12px 18px 0 0;
  	text-align:left;
  	float:right;
  }
  ul.toplink li {
  	text-align:left;
  	display:inline-block;
  	padding:0 1px 0 0;
  	line-height:13px;
  	margin:0;
  }
  ul.toplink li:last-child {
  	border:none;
  }
  ul.toplink li a {
  	color:#6F6F6F;
  	font-size:12px;
  	text-decoration:none;
  	border:1px solid #e5e5e5;
  	border-bottom-color:#ebebeb;
  	display:block;
  	padding:0 15px;
  	line-height:28px;
      background:url(<%= asset_path 'v2/sub-nav.jpg' %>) 0 0 repeat-x;
  }
  ul.toplink li a:hover {
  	color:#626060;
  	text-decoration:none;
  	background:#ebebeb;
  	border:1px solid #dbd9d9;
  	border-bottom-color:#ebebeb;
  }
  ul.toplink li a.selected {
  	color:#626060;
  	text-decoration:none;
  	background:#ebebeb;
  	border:1px solid #dbd9d9;
  	border-bottom-color:#ebebeb;
  }
  /*Grey wrapper*/
  .body-wrapper {
  	background-color:#ebebeb;
  	padding:1.2%;
  	margin:0 10px;
  	position:relative;
  }
  /*Top links*/
  .box-wrapper{
  	width:960px;
  	margin:0 auto;
  }
  .box-wrapper h3{
  	font:bold 20px "Lucida Sans", Arial;
  	color:#707070;
  	text-transform:uppercase;
  	text-shadow:1px 1px 1px #fff;
  	margin-bottom:16px;
  }
  .white-area {
  	padding:15px;
  	background-color:#fff;
  }
  .white-area table {
  	width:100%;
  	color:#464646;
  	font-size:11px;
  	padding:0; margin:0;
  }
  .white-area table td {
  	padding:12px;
  	border:none;
  	text-align:center;
  	vertical-align:middle;
  }
  .white-area table td input {
  	width:auto; height:auto;
  }
  .white-area table tr {
  	border-bottom:1px solid #fff;
  }
  .white-area table td.bord-right {
  	border-right:1px solid #d4d8da;
  }
  .white-area table td.first {
  	width:165px;
  }
  .white-area table td.second {
  	width:56px;
  }
  .white-area table td.fourth {
  	width:55px;
  }
  .white-area table td.fifth {
  	width:59px;
  }
  .white-area table td.sixth {
  	width:56px;
  }
  .white-area table td.seventh {
  	width:56px;
  }
  .white-area table td.eigth {
  	width:56px;
  }
  .white-area table td.ninth {
  	width:57px;
  }
  .white-area table td.tenth {
  	width:57px;
  }
  .white-area table tr.first-row {
  	background-color:#f6f5da;
  	font-size:12px;
  	color:#464646;
  }
  .white-area table tr.second-row {
  	background:url(<%= asset_path 'v2/td-shadow.gif' %>) 0 0 repeat-x;
  	border:1px solid #666666;
  	height:25px;
  }
  .white-area table tr.second-row td {
  	font-size:10px; line-height:11px;
  	color:#fff;
  }
  .white-area table tr.second-row td a {
  	color:#fff; text-decoration:none;
  }
  .white-area table tr.second-row td a:hover {
  	text-decoration:underline;
  }
  .white-area table tr.second-row td {
  	padding-top:0;
  	padding-bottom:0;
  	height:28px;
  }
  .white-area table tr.title-row {
  	background-color:#f1f1f1;
  }
  .white-area table tr.title-row td {
  	font-size:14px;
  	font-weight:bold;
  	text-align:left;
  	padding-top:7px;
  	padding-bottom:7px;
  }
  .white-area table tr.blue-row {
  	background-color:#e2e9ec;
  }
  .white-area table tr.grey-row {
  	background-color:#f8f8f8;
  }
  .white-area table tr.blue-row td,
  .white-area table tr.grey-row td {
  	padding-bottom:5px;
  	padding-top:5px;
  }
  .white-area table tr.blue-row td.lt,
  .white-area table tr.grey-row td.lt {
  	text-align:left;
  }
}