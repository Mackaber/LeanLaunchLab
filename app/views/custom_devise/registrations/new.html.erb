<div class="sponsor-body">
  <div class="sponsor-top-body">
    <div class="wrap-inner">
      <div class="financial">
        <h2>
          <% if session[:promo] == "appsumo" %>
            AppSumo Bundle Sign Up
          <% else %>
            Pricing and Plans
          <% end %>
        </h2>
        <div class="left">
          <% ["Personal", "Garage", "Startup Lite", "Startup Plus", "Enterprise"].each do |plan| %>
          <%= render(:partial => "plan", :object => SubscriptionLevel.find_by_name(plan)) %>
          <% end %>
        </div>
        <div class="right">
          <div class="trail-form">
            <h3>
              <% if session[:promo] == "appsumo" %>
                Free 90 day trial
              <% else %>
                All Plans have a 30-Day Free Trial
              <% end %>
            </h3>
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "sign-up-form"}) do |f| %>
              <p>
                <label>Name</label>
                <%= f.text_field :name %>
              </p>
              <p>
                <label>Email</label>
                <%= f.text_field :email %>
              </p>
              <p>
                <label>Password</label>
                <%= f.password_field :password, :autocomplete => "off" %>
              </p>
              <p>
                <label>Password Again</label>
                <%= f.password_field :password_confirmation, :autocomplete => "off" %>
              </p>
              <% orgs = f.object.organizations.empty? ? [Organization.new] : f.object.organizations %>
              <%= f.fields_for(:organizations, orgs) do |of| %>
              <p>
                <label>Organization Name</label>
                <%= of.text_field :name %><br/>
                <small>The name of your company, group, university, incubator, or non-profit</small>
                <% if session[:brightidea_idea_list] %>
                  <br class="spacer">
                  <label>BRIGHTIDEA API KEY</label>
                  <%= of.text_field :brightidea_api_key %>
                  <br class="spacer">
                  <label>&nbsp;</label>
                  <small>Integrate Brightidea with LeanLaunchLab!</small>                    
                <% end %>                
              </p>
              <% end %>
              <p>
                <input type="submit" class="bttn" value="Start Free Trial">
              </p>
              <p>
                <small>At the end of your trial you will automatically assigned to the cheapest plan based on the resources you are consuming.</small>
              </p>
              <p>
                By signing up you agree to the <%= link_to 'Terms of Service', terms_url, :target=>"_blank" %> and <%= link_to 'Privacy Policy', privacy_url, :target=>"_blank" %>.
              </p>
            <% end %>
          </div>
        </div><br class="spacer">
        <div class="logo-cont">
          <h3>
            LeanLaunchLab is used by organizations that care about innovation
          </h3><%= image_tag("v2/ct-logo.jpg", :alt => "") %><%= image_tag("v2/start-america-logo.jpg", :alt => "") %><%= image_tag("v2/citrix-logo.jpg", :alt => "") %><%= image_tag("v2/stanford-logo.jpg", :alt => "") %><%= image_tag("v2/founderfuel-logo.jpg", :alt => "") %><%= image_tag("v2/north-logo.jpg", :alt => "") %><%= image_tag("v2/cal-logo.jpg", :alt => "") %><br class="spacer">
          <%= image_tag("v2/michigan-logo.jpg", :alt => "") %><%= image_tag("v2/gw-logo.jpg", :alt => "") %><%= image_tag("v2/velocity-logo.jpg", :alt => "") %><%= image_tag("v2/rha-logo.jpg", :alt => "") %><%= image_tag("v2/leans-logo.jpg", :alt => "") %><%= image_tag("v2/green-logo.jpg", :alt => "") %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for(:scripts) do %>
  <script type="text/javascript">
  $(function() {
    $(".price-bttn a").click(function() {
      if ($(this).closest(".price-box").hasClass("enterprise-plus")) {
        var contact = new lll.models.Contact();
        new lll.views.ContactView({
          model: contact,
          title: "Contact Sales"
        }).render();
      }
      else {
        $("form.sign-up-form").effect("highlight");
        $("form.sign-up-form input#user_name").focus();
      }
      return false;
    });
    mpq.track("Signup Loaded");
  });
  </script>
<% end %>