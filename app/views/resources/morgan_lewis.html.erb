<% content_for(:scripts) do %>
  <script type="text/javascript">
    $(function() {
      var model = new lll.models.ResourceQuestion({
        type: "legal",
        name: <%= (user_signed_in? ? current_user.name : nil).to_json.html_safe %>,
        email: <%= (user_signed_in? ? current_user.email : nil).to_json.html_safe %>
      });
      var view = new lll.views.NewResourceQuestionView({
        label: "Ask Morgan Lewis a legal question",
        el: $(".question-form"),
